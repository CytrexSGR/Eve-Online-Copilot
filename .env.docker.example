# EVE Co-Pilot - Docker Compose Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_DB=eve_sde
POSTGRES_USER=eve
POSTGRES_PASSWORD=EvE_Pr0ject_2024
DB_PORT=5432

# =============================================================================
# BACKEND API (Port 8000)
# =============================================================================
BACKEND_PORT=8000

# EVE SSO Authentication
EVE_CLIENT_ID=your_eve_client_id_here
EVE_CLIENT_SECRET=your_eve_client_secret_here
EVE_CALLBACK_URL=http://localhost:8000/api/auth/callback

# Discord Notifications (optional)
DISCORD_WEBHOOK_URL=

# Development
RELOAD=false

# =============================================================================
# AI COPILOT SERVER (Port 8001)
# =============================================================================
COPILOT_PORT=8001

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# OpenAI API (for Whisper STT and TTS)
OPENAI_API_KEY=your_openai_api_key_here
WHISPER_MODEL=whisper-1
TTS_MODEL=tts-1
TTS_VOICE=nova

# LLM Configuration
MAX_TOKENS=4096
TEMPERATURE=1.0
MAX_TOOL_ITERATIONS=5
MAX_CONVERSATION_HISTORY=50

# =============================================================================
# FRONTEND (Port 5173)
# =============================================================================
FRONTEND_PORT=5173

# Frontend API URLs
VITE_API_URL=http://localhost:8001
VITE_WS_URL=ws://localhost:8001

# =============================================================================
# PRODUCTION DEPLOYMENT (Optional)
# =============================================================================
# For production, update these to your public URLs:
# EVE_CALLBACK_URL=https://yourdomain.com/api/auth/callback
# VITE_API_URL=https://yourdomain.com:8001
# VITE_WS_URL=wss://yourdomain.com:8001
